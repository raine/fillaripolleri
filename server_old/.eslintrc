{
  "extends": "eslint:recommended",
  "rules": {
    "arrow-parens": 0,
    "no-console": 0,
    "no-const-assign": 2,
    "no-unneeded-ternary": 2,
    "no-unused-vars": ["error", {"argsIgnorePattern": "^_"}],
    "no-var": 2,
    "prefer-const": 2,
    "semi": [2, "never"]
  },
  "env": {
    "es6": true,
    "node": true
  },
  parserOptions: {
    "sourceType": "module",
    "ecmaVersion": 2017
  }
}
